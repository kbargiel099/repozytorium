	private Marketing marketing;
	
	private JFrame gui;
	private JButton przycisk1,przycisk2;
	
	public GUI()
	{
		marketing = new Marketing();
		pr = new projekt();
		pr.dodaj(new Produkt(1,"M¹ka",20,1));
