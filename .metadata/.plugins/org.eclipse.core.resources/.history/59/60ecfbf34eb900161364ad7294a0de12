		private List<Produkt> db;
		
		public projekt()
		{
			db = new ArrayList<Produkt>();
		}
		
		public void dodaj(Produkt produkt)
		{
			db.add(produkt);
		}
		
		public String wypiszProdukty()
		{
			return db.toString();
		}
		
		
		public List<Produkt> pobierzListe()
		{
			return db;
		}
		
}
